---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import PostCard from "../components/PostCard.astro";
import Link from "../components/Link.astro";

// utils imports
import { formatBlogPosts } from "../js/utils";
const allPosts = await Astro.glob("./blog/*.md");
const formattedPosts = formatBlogPosts(allPosts, {
  limit: 3,
});
---

<MainLayout title="XMJ's Blog" description="This is blog about XMJ's Life.">
  <section class="container about" aria-label="About Me">
    <img
      src="/images/headshot.jpg"
      alt="My headshot"
      width="200"
      height="330"
    />

    <div class="content">
      <h1 class="h1">XMJ Blog</h1>
      <p>
        Hi there! My name is XMJ, and I'm a super cute 3.5-year-old tabby cat. I
        weigh 6kg and am full of energyâ€”I love to run around and play all day
        long! Snacks are my absolute favorite, and nothing makes me happier than
        spending time with my beloved XX and Levi. Whether I'm chasing after
        toys or enjoying a tasty treat, life is always an adventure for me!
      </p>

      <Link
        href="/about/"
        style="secondary"
        text="ðŸ¤ž Say Hello"
      />
    </div>
  </section>
  <section class="container" aria-label="New Blog Posts">
    <h2 class="h1">New Blog Posts</h2>
    <div class="post-container">
      {
        formattedPosts.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType="h2"
          />
        ))
      }
    </div>
  </section>
</MainLayout>
